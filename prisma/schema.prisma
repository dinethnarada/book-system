generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["edu_support"]
}
        

model School {
  id          String   @id @default(cuid())
  name        String
  district    String
  address     String
  contactName String
  contactNumber     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  materialRequests MaterialRequest[]

  @@index([district])
  @@index([name])
  @@schema("edu_support")
}

model MaterialRequest {
  id           String   @id @default(cuid())
  schoolId     String
  description  String?
  status       String   @default("PENDING") // PENDING, ASSIGNED, FULFILLED
  editToken    String   @unique // Unique token for editing request status
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  school  School         @relation(fields: [schoolId], references: [id])
  items   RequestItem[]

  @@index([schoolId])
  @@index([status])
  @@index([createdAt])
  @@schema("edu_support")
}

model RequestItem {
  id        String   @id @default(cuid())
  requestId String
  material  String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  request MaterialRequest @relation(fields: [requestId], references: [id])

  @@index([requestId])
  @@schema("edu_support")
}
